# Matrix Universal Docker - Configuración
# Personaliza estas variables según tus necesidades

# =============================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================
SERVER_NAME=localhost
DATA_PATH=./data

# =============================================
# BASE DE DATOS POSTGRESQL
# =============================================
POSTGRES_DB=synapse
POSTGRES_USER=synapse_user
POSTGRES_PASSWORD=matrix_secure_2025

# =============================================
# MATRIX SYNAPSE
# =============================================
# Permitir registro de nuevos usuarios
ENABLE_REGISTRATION=true

# Habilitar federación con otros servidores Matrix
ENABLE_FEDERATION=false

# Enviar estadísticas anónimas a matrix.org
REPORT_STATS=no

# Secreto para registro de usuarios (cambiar por uno único)
MATRIX_REGISTRATION_SHARED_SECRET=cambiar_por_secreto_unico

# =============================================
# CONFIGURACIÓN ADICIONAL
# =============================================
# Zona horaria
TZ=Europe/Madrid

# Configuración Python
PYTHONUNBUFFERED=1

# Nivel de logging
LOG_LEVEL=INFO

# =============================================
# LIMITES DE RECURSOS (OPCIONAL)
# =============================================
# Memoria máxima para el contenedor
MEMORY_LIMIT=2G

# CPU máxima para el contenedor
CPU_LIMIT=1.0

# =============================================
# CONFIGURACIÓN AVANZADA
# =============================================
# Tamaño máximo de archivo para subir (en MB)
MAX_UPLOAD_SIZE=50

# Máximo de conexiones a la base de datos
DB_MAX_CONNECTIONS=10

# Caché de Matrix (factor multiplicador)
CACHE_FACTOR=1.5